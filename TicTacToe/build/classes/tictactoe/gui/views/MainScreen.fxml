            <DropShadow color="#eb5454" height="90.0" radius="54.5" width="130.0" />
         </effect></Button>
      <Button fx:id="btnFun" layoutX="14.0" layoutY="92.0" mnemonicParsing="false" onAction="#handleButtonFun" prefHeight="56.0" prefWidth="139.0" text="Play for fun">
