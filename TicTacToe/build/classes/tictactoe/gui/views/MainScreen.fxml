<AnchorPane id="AnchorPane" fx:id="rootPane" prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tictactoe.gui.controller.MainScreenController">
   <children>
      <ImageView fitHeight="500.0" fitWidth="400.0" layoutX="25.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
