         <effect>
            <Bloom threshold="0.0" />
         </effect>
      </Label>
      <Button fx:id="btnSeri" layoutX="247.0" layoutY="92.0" mnemonicParsing="false" onAction="#handleButtonSerious" prefHeight="56.0" prefWidth="139.0" text="Why so Serious">
